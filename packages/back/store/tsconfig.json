{
    "compilerOptions": {
      "lib": ["esnext"],
      "target": "esnext",                                 
      "module": "commonjs",        
      "moduleResolution": "node",     
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,    
      "outDir": "./dist",
      "rootDir": "./src",
      "strictPropertyInitialization": false,
      "strict": true,      

    
    
      // "esModuleInterop": true, 
      // "declaration": true,
      // "declarationMap": true,      
      // "types": ["node"],  
      // "baseUrl": ".",       
             
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
      "./node_modules/*",
      "lib"
  ]
}
