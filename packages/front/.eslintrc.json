{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "prettier/prettier": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "arrow-spacing": "error",
        "array-bracket-spacing": "error",
        "no-duplicate-imports": "error",
        "no-var": "error",
        "eqeqeq": ["error", "always"],
        "no-empty-function": "error",
        "camelcase": "error",
        "key-spacing": ["error", { "beforeColon": false }],
        "semi": [
            "error",
            "always"
        ],
        "default-case": "error",
        "comma-spacing": "error",
        "comma-style": ["error", "last"],
        "no-useless-return": "error",
        "curly": ["error"],
        "vue/no-reserved-component-names": "off"
    }
}
